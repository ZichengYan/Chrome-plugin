{  
    "manifest_version": 2,
    "name": "aa测试插件",
    "version": "1.0",
    "description": "插件2222",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "click",
        "default_popup": "popup.html"

    },
    "permissions": [
        "<all_urls>",//匹配所有种类的url(ftp,http...)
        "bookmarks",
        "tabs",
        "history"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],//匹配到所有的url地址是加载下面的脚本、样式
        "css": ["mystyles.css"],
        "js": ["test.js","jquery.min.js"],
        "run_at":"document_end"
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false //使用事件页面
    }
}
