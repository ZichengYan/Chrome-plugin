{
    "name": "__Alpha采集插件新版",
    "manifest_version": 2,
    "icons": {
        "16": "icon/icon19-2.png",
        "48": "icon/icon48-2.png",
        "128": "icon/icon128-2.png"
    },
    "version": "1.0.0",
    "minimum_chrome_version": "44.0.0.0",
    "author": "xy5000661714@gmail.com",
    "description": "Alpha采集插件",
    "browser_action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": false,
        "js": ["./script/jquery.min.js","./script/draggabilly.pkgd.min.js","content.js"],
        "css":["./css/onCollection.css"],
        "run_at": "document_end"
    }],
    "background": {
        "scripts": ["background.js"]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "img/*", "css/*"
    ],
    "permissions": ["*://*/*", "tabs", "contextMenus", "storage", "webRequest", "webRequestBlocking", "downloads"]
}
